@{
    ViewBag.Title = "Students List";
    ViewBag.pTitle = "Students List";
    ViewBag.pageTitle = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
                <!--datatable css-->
                <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
                <!--datatable responsive css-->
                <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />

                <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}
@* check that there is a message *@
@if (ViewBag.Message != null)
{
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        Student List
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table id="scroll-horizontal" class="table nowrap align-middle" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>
                                                    Enrollment Number
                                                </th>
                                                <th>
                                                    Student Name
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Phone Number
                                                </th>
                                                <th>
                                                    CGPA
                                                </th>
                                                <th>
                                                    9th Marks
                                                </th>
                                                <th>
                                                    10th Marks
                                                </th>
                                                <th>
                                                    11th Marks
                                                </th>
                                                <th>
                                                    12th Marks
                                                </th>
                                                <th>
                                                    Is Approved
                                                </th>
                                                <th>
                                                    Action
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                @foreach (var item in ViewBag.Students)
                                                {
                                                    <tr>
                                                        <td>@item.Id</td>
                                                        <td>@item.Enro</td>
                                                        <td>@item.Fname @item.Lname</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Contact</td>
                                                        <td>@item.CGPA</td>
                                                        <td>@item.Marks9</td>
                                                        <td>@item.Marks10</td>
                                                        <td>@item.Marks11</td>
                                                        <td>@item.Marks12</td>
                                                        <td>
                                                            @if (item.IsApproved == "0")
                                                            {
                                                                <span class="badge bg-success">Applied</span>
                                                            }
                                                            else if (item.IsApproved == "1")
                                                            {
                                                                <span class="badge bg-primary">Approved</span>
                                                            }
                                                            else if (item.IsApproved == "2")
                                                            {
                                                                <span class="badge bg-danger">Rejected</span>
                                                            }
                                                            else if (item.IsApproved == "3")
                                                            {
                                                                <span class="badge bg-info">Improvment Needed</span>
                                                            }else{
                                                                <span class="badge bg-warning">Applied For Improvment</span>
                                                            }
                                                        </td>
                                                        @* <td>
                                                            <a href="@Url.Action("ApproveStudent", "Authentication", new { id = item.Id })" class="btn btn-primary btn-sm">
                                                                Approve
                                                            </a>
                                                            <a href="@Url.Action("RejectStudent", "Authentication", new { id = item.Id })" class="btn btn-info btn-sm">
                                                                Reject
                                                            </a>
                                                            <a href="@Url.Action("ImprovementStudent", "Authentication", new { id = item.Id })" class="btn btn-warning btn-sm">
                                                                Needs Improvement
                                                            </a>
                                                            <a href="@Url.Action("DeleteStudent", "Authentication", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                                                        </td> *@
                                                        <td>
                                                        <div class="dropdown d-inline-block">
                                                            <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                <i class="ri-more-fill align-middle"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-end">
                                                                <li>
                                                                    <a href="@Url.Action("ApproveStudent", "Authentication", new { id = item.Id })" class="dropdown-item">
                                                                        <i class="ri-eye-fill align-bottom me-2 text-muted"></i>Approve
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="@Url.Action("RejectStudent", "Authentication", new { id = item.Id })" class="dropdown-item">
                                                                        <i class="ri-pencil-fill align-bottom me-2 text-muted"></i>Reject
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="@Url.Action("ImprovementStudent", "Authentication", new { id = item.Id })" class="dropdown-item">
                                                                        <i class="ri-edit-box-line align-bottom me-2 text-muted"></i>Needs Improvement
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <form method="post" action="@Url.Action("DeleteStudent", "Authentication")">
                                                                        <input type="hidden" name="id" value="@item.Id" />
                                                                        <button type="submit" class="dropdown-item">
                                                                            <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>Delete
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

@section scripts {

                                    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

                    <!--datatable js-->
                    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
                    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
                    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

                    <script src="~/assets/js/pages/datatables.init.js"></script>

                    <!-- App js -->
                    <script src="~/assets/js/app.js"></script>
}