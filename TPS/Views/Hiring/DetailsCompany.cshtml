@{
    ViewBag.Title = "Manager Hiring Program";
    ViewBag.pTitle = "Manager Hiring Program";
    ViewBag.pageTitle = "Manager Hiring Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
                                                <!--datatable css-->
                                                <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
                                                <!--datatable responsive css-->
                                                <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />

                                                <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}
@* check that there is a message *@
@if (ViewBag.Message != null)
{
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Company Details</h5> 
            </div>
            <div class="card-body">
                <p class="card-title mb-3">
                    <span style="font-weight: bold;">
                        Company Name:
                    </span>
                    @ViewBag.Company.Name
                </p>
                <p class="card-text">
                    <span style="font-weight: bold;">Email:</span>
                    @ViewBag.Company.Email
                </p>
                <p class="card-text">
                    <span style="font-weight: bold;">Industry Type:</span>
                    @ViewBag.Company.IndustryType
                </p>
                <p> 
                    <span style="font-weight: bold;">Description:</span>
                    @ViewBag.Company.Description
                </p>
            </div>
        </div>
    </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                Hiring Programs List
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <table id="scroll-horizontal" class="table nowrap align-middle" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Program Name</th>
                                                        <th>Description</th>
                                                        <th>Start Date</th>
                                                        <th>End Date</th>
                                                        <th>Course</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                        @foreach (var item in ViewBag.CompanyHirings)
                        {
                                                                <tr>
                                                                    <td>@item.Program_name</td>
                                                                    <td>@item.Description</td>
                                                                    <td>@item.Start_date</td>
                                                                    <td>@item.End_date</td>
                                                                    <td>@item.Course_name</td>
                                                                </tr>
                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                Interview List
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <table id="scroll-horizontal" class="table nowrap align-middle" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Company_name</th>
                                                        <th>Hiring_name</th>
                                                        <th>Interview_date</th>
                                                        <th>Interview_time</th>
                                                        <th>Venue</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                        @foreach (var item in ViewBag.Interviews)
                        {
                                                                <tr>
                                                                    <td>@item.Company_name</td>
                                                                    <td>@item.Hiring_name</td>
                                                                    <td>@item.Interview_date</td>
                                                                    <td>@item.Interview_time</td>
                                                                    <td>@item.Venue</td>
                                                                </tr>
                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

@section scripts {
                                                                    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
                                                    <!--datatable js-->
                                                    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
                                                    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
                                                    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
                                                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
                                                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
                                                    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
                                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
                                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
                                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

                                                    <script src="~/assets/js/pages/datatables.init.js"></script>

                                                    <!-- App js -->
                                                    <script src="~/assets/js/app.js"></script>
}