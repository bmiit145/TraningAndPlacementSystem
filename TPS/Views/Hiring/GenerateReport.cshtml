                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        Generate Report
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="@Url.Action("StudentGenerateReport", "Hiring")" id="optionform">
                                        <select class="form-select" name="option" id="option">
                                            <option value="">Select Company</option>
                                            <option value="0">Generate report for student</option>
                                            <option value="1">Generate report for company</option>
                                            <option value="2">Generate report for hiring program</option>
                                            <option value="3">Generate report for interviews</option>
                                        </select>
                                        <button type="submit" id="action-text" class="btn btn-primary mt-3">
                                            Generate Report
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
